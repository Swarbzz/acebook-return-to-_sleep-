<p id="notice"><%= notice %></p>

<p>
  <%= @album.images.length %>
  <% @album.images.each do |image| %>
  <div style="width:200px; height:auto">
    <%= link_to image_tag(image, style:'width:100%'), album_path %> <br>
  </div>
  <% end %>
</p>
<p>
  <strong>Caption:</strong>
  <%= @album.caption %>
</p>

<p>
  <strong>User:</strong>
  <%= @album.user.name %>
</p>

<%= link_to 'Edit', edit_album_path(@album) %> |
