<p id="notice"><%= notice %></p>

<h1>Albums</h1>
<% if @current_user != nil %>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.caption %></td>
        <td><%= album.user.name %></td>
        <td><%= link_to 'Show', album %></td>
        <% if album.user.id == @current_user.id %>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>        
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    <%= link_to 'New Album', new_album_path %>
    <% else %>
      <h1>Please log in or sign up to view or add photo albums</h1>
    <% end %>
  </tbody>
</table>

<br>

